/**index.wxss**/
swiper{
 width: 100%
}
swiper image{
  display: block;
  width: 100%;
}
.index-main{
  width: 100;
  box-sizing: border-box;
  padding: 0 50rpx;
}

.menu-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  border-bottom: 1px solid #b9b9b9;
}
.menu-list .menu-item{
  width: 25%;
  margin-bottom: 20rpx;
}

.menu-item .menu-icon{
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin:0 auto;
}
.menu-item .menu-text{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
}

/* news */
.news{
  position: relative;
  display: flex;
  padding: 20rpx 0;
  align-items: center;
}
.news::after{
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  right: 20rpx;
  top: 26rpx;
  border-top: 2px solid #ccc;
  border-right: 2px solid #b9b9b9;
  transform: rotate(45deg);
}
.news .news-logo{
  width: 160rpx;
  height: 35rpx;
  margin: 0 20rpx;
}
.news .news-title{
  flex: 1;
  font-size: 26rpx;
}